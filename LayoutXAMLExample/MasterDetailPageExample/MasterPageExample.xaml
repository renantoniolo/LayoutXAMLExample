<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LayoutXAMLExample.MasterDetailPageExample.MasterPageExample"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout
            Padding="20,60,20,20">
            
            <Button 
                Margin="5"
                BackgroundColor="Transparent"
                Text="Navigation Page" 
                TextColor="Black" 
                HorizontalOptions="FillAndExpand"
                Clicked="Handle_Clicked"/>
            
            <Button 
                Margin="5"
                BackgroundColor="Transparent"
                Text="Tabbed Page" 
                TextColor="Black" 
                HorizontalOptions="FillAndExpand"
                Clicked="Handle_Clicked_1"/>
            
            <Button 
                Margin="5"
                BackgroundColor="Transparent"
                Text="Carousel Page" 
                TextColor="Black" 
                HorizontalOptions="FillAndExpand"
                Clicked="Handle_Clicked_2"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
